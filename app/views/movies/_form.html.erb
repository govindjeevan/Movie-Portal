<%= form_for @movie, html: {multipart: true} do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="row">
      <div class="form-group col-lg-6">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control color' %>
      </div>
    </div>
  </div>

  <div class="field">

    <div class="row">
      <div class="form-group col-lg-6">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control color' %>
      </div>
    </div>
  </div>

  <div class="field ">
    <div class="row">
      <div class="form-group col-lg-6">
        <%= form.label :movie_length %>
        <%= form.text_field :movie_length, class: 'form-control color' %>
      </div>
    </div>
  </div>

  <div class="field ">
    <div class="row">
      <div class="form-group col-lg-6">
        <%= form.label :director %>
        <%= form.text_field :director, class: 'form-control color' %>
      </div>
    </div>
  </div>

  <div class="field ">
    <div class="row">
      <div class="form-group col-lg-6">
        <%= label_tag "genre" %>
        <%= select_tag "genre_select", options_for_select(["Select One", "Sci-Fi", "Superhero", "Biography","Documentary","Comedy", "Romance", "Adventure", "Action"],:disabled => ["Select One"]),class: 'form-control color' %>
      </div>
    </div>
  </div>


  <div class="field " style="display: none">
    <div class="row">
      <div class="form-group col-lg-6">
        <%= form.label :rating %>
        <%= form.text_field :rating, class: 'form-control color' %>
      </div>
    </div>
  </div>

  <div class="field">
    <div class="row">
      <div class="form-group col-lg-6">
        <%= form.label :image %>
        <%= form.file_field :image, class: 'form-control color' %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Submit", :class => "btn btn-primary btn-lg" %>
  </div>
  <br>

<% end %>
