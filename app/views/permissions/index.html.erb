<h1>Permissions</h1>
<hr>
<table class="responsive nowrap table table-hover" id="dttb-permissions" data-sort="true" data-source="<%= url_for(format: :json)%>">
  <thead>
    <tr>
      <th data-data="actions">Actions</th>
      <th data-data="subject_class">Subject class</th>
      <th data-data="description">Description</th>
      <th data-data="action">Actions</th>
    </tr>
  </thead>

  <tbody>

  <% @permissions.each do |permission| %>
    <tr>
      <td><%= permission.actions %></td>
      <td><%= permission.subject_class %></td>
      <td><%= permission.description %></td>
      <% if  can? :update, Permission  %>
        <td>
          <%= link_to 'Edit', edit_permission_path(permission), :class => "btn btn-warning" %>
          <% if can? :destroy, Permission %>
            <%= link_to 'Destroy', permission, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-danger" %></td>
          <% end %>
      <% end %>

    </tr>
  <% end %>
  </tbody>


</table>

<br>

<%= link_to 'New Permission', new_permission_path, :class => "btn btn-primary" %>