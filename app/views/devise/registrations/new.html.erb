<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <div class="row">
      <div class="form-group col-lg-6">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control color'%>
  </div>
</div>
</div>

  <div class="field">
    <div class="row">
      <div class="form-group col-lg-6">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control color' %>
  </div>
  </div>
  </div>

  <div class="field">
    <div class="row">
      <div class="form-group col-lg-6">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control color' %>
  </div>
  </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" , class:"btn btn-success btn-lg btn3d"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
