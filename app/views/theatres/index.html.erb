<p id="notice"><%= notice %></p>


<h1 id="title">Theatres</h1>

<hr>

<table  class="table-striped table" id="dttb">
  <thead>
    <tr>
      <th>Name</th>
      <th>Capacity</th>
      <th>Address</th>
      <% if current_user.try(:admin?) %>
      <th> Actions</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @theatres.each do |theatre| %>
      <tr>
        <td><%= theatre.name %></td>
        <td><%= theatre.capacity %></td>
        <td><%= theatre.address %></td>
        <% if current_user.try(:admin?) %>
        <td><%= link_to 'Show', theatre %><%= link_to 'Edit', edit_theatre_path(theatre) %><%= link_to 'Destroy', theatre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.try(:admin?) %>
<%= link_to "New Theatre".html_safe, new_theatre_path, :class => "btn btn3d btn-info " %>
<% end %>


<script>
    $(document).ready(function() {
        $("#dttb").dataTable();
    });

</script>


