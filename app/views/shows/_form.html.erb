<%= form_for([@theatre, show]) do |form| %>
  <% if show.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(show.errors.count, "error") %> prohibited this show from being saved:</h2>

      <ul>
        <% show.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :start %>
    <%= form.datetime_select :start,:class=>"form-control" %>
  </div>
<br>
  <div class="field" style="width:50%">
    <% @movies=Movie.all%>
    <%= select_tag "movie_select", options_from_collection_for_select(@movies, "id", "title"), :class=>"form-control"%>
  </div>

<br>
  <div class="field">
    <%= form.label :end %>
    <%= form.datetime_select :end %>
  </div>
  <br>

  <div class="actions">
    <%= form.submit "Add Show",:class=>"btn btn-success" %>
  </div>
<% end %>

