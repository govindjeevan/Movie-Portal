

<h1 id="title">Assign Roles</h1>
<p id="notice"><%= notice %></p>

<hr>
<div class="container" style="width: 90%; margin-left: 0">

  <table class="dataTable table table-striped " id="dttb">
    <thead>
    <tr>
      <th>E-Mail</th>
      <th>Role</th>
      <th>Action</th>

    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role.capitalize! if user.role? %></td>
        <td>
          <%= link_to "Assign", {:controller => "roles", :action => "assign", :user_id => user.id }, :class => "btn btn-primary"%>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>


<script>
    $(document).ready(function () {
        $("#dttb").dataTable({
                width: 80,
                responsive: true
            }
        );
    });

</script>

