<%= form_for(@role,:html => {:class=>"form-horizontal form-label-left"}) do |f| %>
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>User Profile</h2>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <% if @role.errors.any? %>
              <div class="alert alert-danger alert-dismissible fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span>
                </button>
                <h2><%= pluralize(@role.errors.count, "error") %> prohibited your details from being saved:</h2>
                <ul>
                  <% @role.errors.full_messages.each do |msg| %>
                      <li><%= msg.split(':')[1] %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>


          <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">Role Name</label>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= f.text_field :name, :class=>"form-control col-md-7 col-xs-12" %>
              <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
            </div>
          </div>
            <div class="clearfix"></div>
          <hr>
            <table class="table table-striped table-hover table-fixed">
              <thead>
              <tr>
                <th width="50%">Permission</th>
                <th width="20%">Controller</th>
                <th width="20%">Description</th>
                <th  width="10%">Add permission</th>
              </tr>
              </thead>
              <tbody>
              <% for permission in Permission.all %>
                  <tr>
                    <td>
                      <div id="action"><%= h permission.actions %></div>
                    </td>
                    <td>
                      <div id="action" style="width: 200px"><%= h permission.subject_class %></td>
                    <td>
                      <div id="action"><%= h permission.description %></div>
                    </td>
                    <td>
                      <%= check_box_tag "role[permission_ids][]", permission.id, @role.permissions.include?(permission) %></td>
                  </tr>
              <% end %>
              <tr>
                <td colspan='4'>
                  <%= f.submit "Save Permissions", :class => "btn btn-center btn-primary" %>
                </td>
              </tr>
              </tbody>
            </table>
        </div>
      </div>
    </div>
<% end %>
